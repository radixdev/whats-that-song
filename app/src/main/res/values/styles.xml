<resources>
    <attr name="icon_drawable_map" format="reference"/>
    <attr name="icon_drawable_radio" format="reference"/>
    <attr name="icon_drawable_headset" format="reference"/>
    <attr name="icon_drawable_backup" format="reference"/>
    <attr name="icon_drawable_timeline" format="reference"/>
    <attr name="icon_drawable_invert_color" format="reference"/>
    <attr name="selector_drawable_favorite_selector_drawable" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="icon_drawable_map">@drawable/ic_map_black_48dp</item>
        <item name="icon_drawable_radio">@drawable/ic_radio_black_48dp</item>
        <item name="icon_drawable_headset">@drawable/ic_headset_black_48dp</item>
        <item name="icon_drawable_backup">@drawable/ic_backup_black_48dp</item>
        <item name="icon_drawable_timeline">@drawable/ic_timeline_black_48dp</item>
        <item name="icon_drawable_invert_color">@drawable/ic_invert_colors_black_48dp</item>
        <item name="selector_drawable_favorite_selector_drawable">@drawable/favorite_selector_light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Dark theme base colours -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="icon_drawable_map">@drawable/ic_map_white_48dp</item>
        <item name="icon_drawable_radio">@drawable/ic_radio_white_48dp</item>
        <item name="icon_drawable_headset">@drawable/ic_headset_white_48dp</item>
        <item name="icon_drawable_backup">@drawable/ic_backup_white_48dp</item>
        <item name="icon_drawable_timeline">@drawable/ic_timeline_white_48dp</item>
        <item name="icon_drawable_invert_color">@drawable/ic_invert_colors_white_48dp</item>
        <item name="selector_drawable_favorite_selector_drawable">@drawable/favorite_selector_dark</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
</resources>
